lshift + hyper - h : yabai -m window --warp west
lshift + hyper - j : yabai -m window --warp south
lshift + hyper - k : yabai -m window --warp north
lshift + hyper - l : yabai -m window --warp east

hyper - q : yabai -m window --focus west
hyper - w : yabai -m window --focus south
hyper - e : yabai -m window --focus north
hyper - r : yabai -m window --focus east

rcmd - r         : yabai -m space --rotate 270
shift + alt - r : yabai -m space --rotate 90

shift + alt - space : \
  yabai -m window --toggle float; \
    yabai -m window --toggle border


hyper - d: yabai -m space --focus next
hyper - a: yabai -m space --focus prev

hyper - 1: yabai -m space --focus 1
hyper - 2: yabai -m space --focus 2
hyper - 3: yabai -m space --focus 3
hyper - 4: yabai -m space --focus 4
hyper - 5: yabai -m space --focus 5
hyper - 6: yabai -m space --focus 6
hyper - 7: yabai -m space --focus 7
hyper - 8: yabai -m space --focus 8
hyper - 9: yabai -m space --focus 9

hyper - return : open -a Alacritty
hyper - f : open -a Firefox

rcmd - f         : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen


