alias c='clear'
alias ll='ls -lf'
alias code="open -a 'Visual Studio Code'"
alias s='source ~/.zshrc;echo "\n $fg[green]ZSH Sourced$reset_color \n"'

#VIM
alias vi='nvim'
alias vim='nvim'
alias v='ls -1a | fzf-tmux -p --reverse | xargs nvim'

#FLUTTER
alias f='fvm flutter'
alias fd='fvm flutter devices'
alias fr='fvm flutter run'
alias frr='fvm flutter run --release'
alias fpg='fvm flutter pub get'
alias fc='fvm flutter clean'

#LazyGit
alias lg='lazygit'

#Remove
alias rm='trash'

#FOLDERS
alias dev='cd ~/dev/'

#TLDR
alias tldrf='tldr --list | fzf --preview "tldr {1} --color=always" --preview-window=right,80% | xargs tldr'

#DESKTOP
alias showDesktop='defaults write com.apple.finder CreateDesktop true; killall Finder';
alias hideDesktop='defaults write com.apple.finder CreateDesktop false; killall Finder';

#TMUX
alias ta='tmux attach -t'
alias tn='tmux new-session -s'
alias tk='tmux kill-session -t'
alias tl='tmux list-sessions'
alias td='tmux detach'
